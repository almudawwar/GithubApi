<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/line_margin"
        android:layout_marginRight="@dimen/line_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:text="TEXT"
        android:layout_marginLeft="@dimen/text_margin_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/text_margin_top"
        app:layout_constraintRight_toLeftOf="@+id/avatar_preview"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/avatar_preview"
        android:layout_width="@dimen/avatar_prev_dim"
        android:layout_height="@dimen/avatar_prev_dim"
        android:src="@drawable/ic_user"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/avatar_prev_margin_right"
        android:layout_marginTop="@dimen/avatar_prev_vertical_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/avatar_prev_vertical_margin"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>